<struts>
	<package name="default" extends="struts-default">
		<action name="registerPopulate" class="edu.curso.struts2.actions.RegisterAction" method="populate">
			<result name="populate">/register.jsp</result>
		</action>

		<action name="saveRegister" class="edu.curso.struts2.actions.RegisterAction" method="guardar">
			<result name="success">/success.jsp</result>
			<result name="input">/register.jsp</result>

		</action>


	</package>
</struts>
